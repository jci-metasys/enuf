{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2020": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 11
    },
    "globals": {
        "console": "readonly",
        "process": "readonly",
        "__filename": "readonly",
        "__dirname": "readonly",
        // mocha vars
        "describe": "readonly",
        "context": "readonly",
        "it": "readonly"
    },
    "rules": {
        "indent": [
            "error",
            4,
            { "SwitchCase": 1 }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}
